---
import Layout from "../layouts/Layout.astro";
import Navbar from "./Navbar.svelte";
import Search from "./Search.svelte";

export interface Props {
    title: string;
    heading: string;
}
---

<Layout title={Astro.props.title}>
    <Navbar client:load />

    <main>
        <h3>{Astro.props.heading}</h3>
        <Search client:only />
    </main>
</Layout>

<style>
    h3 {
        opacity: 0.8;
        font-weight: 700;
        font-size: 2.5rem;
    }

    main {
        margin-top: 10vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
